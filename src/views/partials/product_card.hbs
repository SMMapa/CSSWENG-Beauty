 <div class="product-card relative bg-white p-4 rounded-2xl shadow-md flex flex-col items-center text-center cursor-pointer hover:-translate-y-1 hover:shadow-xl transition-all duration-300" onclick="toggleProductDetails(this)">
                <img src="/assets/{{this.name}}" alt="{{this.name}}" class="rounded-xl mb-3 object-cover w-full h-36">
                <div class="product-info w-full">
                    <h3 class="font-semibold text-gray-800 text-lg mb-1">{{ this.name }}</h3>
                    <p class="text-gray-600 text-sm mb-2 product-stock">Stock: {{ this.stock_qty }}</p>
                    <div class="product-details">
                        <p class="text-gray-700 text-sm mb-3">
                            {{ this.description }}
                        </p>
                        <div class="product-details-grid">
                            <p><span class="detail-label">Brand:</span> <span class="detail-value">{{ this.brand_name }}</span></p>
                            <p><span class="detail-label">Category:</span> <span class="detail-value">{{ this.category }}</span></p>
